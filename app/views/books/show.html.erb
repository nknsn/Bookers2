  <%= render 'info', book: @book, current_user: @book.user %>

     <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>

        <table class="table table-hover table-inverse">
          <thead>
          </thead>
          <tbody>
             <tr>
               <th><%= image_tag @book.user.get_profile_image(40,40) %>
               <br><%= link_to @book.user.name, user_path(@book.user.id) %></th>

              <th><%= link_to @book.title %></th>
              <th><%= @book.body %></th>

                <% if @book.user == current_user %>
                <th><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %></th>

                <th><%= link_to "Destroy", book_path, class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                </th>
               <% end %>
             </tr>


          </tbody>
        </table>
      </div>