<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      
      <% if user.profile_image.attached? %>
       <%= image_tag user.profile_imaage, saize: "100x100" %>
      <% else %>
       <%= image_tag 'no_image', size: "100x100" %>
      <% end %>

      
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
          
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block btn-sm , href="@user_id/edit">
          <i class="fas fa-user-cog"></i>
          </a>
      </div>
      
      <h2 class="mt-3">New book</h2>
      
      <%= form_with model: @book,local:true do |f| %>
      
        <h6>Title</h6>
        <%= f.text_field :title %>
        
        <h6>Opinion</h6>
        <%= f.text_area :body %>
        <br>
        <%= f.submit'Create Book' %>
      <% end %>  
        
      
    </div>
  </div>
</div>