<%= render 'info', book: @book %>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
             <tr>
              <th>
                <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(40,40) %>
                <% end %></th>
              <th><%= link_to book.title , book_path(book.id) %></th>
              <th><%= book.body %></th>
             </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
