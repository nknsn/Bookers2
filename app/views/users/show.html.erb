 <%= render 'books/info', book: @book, current_user: @user %>

    <div class="col-md-8 offset-md-1">
        <h2>Books</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
             <tr>
              <th><%= image_tag @user.get_profile_image(40,40) %></th>
              <th><span><%= link_to book.title , book_path(book.id) %></span></th>
              <th><span><%= book.body %></span></th>
             </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>